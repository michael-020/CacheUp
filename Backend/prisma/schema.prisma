generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  binaryTargets = ["native", "darwin-arm64", "linux-arm64-openssl-3.0.x"]
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

model Forum {
  id        String @id @default(uuid())
  mongoId   String @unique
  embedding Unsupported("vector(384)")?
  threads   Thread[]
  
  // Indexes
  @@index([mongoId], name: "idx_forum_mongo_id")
}

model Thread {
  id        String @id @default(uuid())
  mongoId   String @unique
  embedding Unsupported("vector(384)")?
  forumId   String
  forum     Forum   @relation(fields: [forumId], references: [id])
  posts     Post[]
  
  // Indexes
  @@index([mongoId], name: "idx_thread_mongo_id")
  @@index([forumId], name: "idx_thread_forum_id")
  @@index([forumId, mongoId], name: "idx_thread_forum_mongo")
}

model Post {
  id        String @id @default(uuid())
  mongoId   String @unique
  embedding Unsupported("vector(384)")?
  threadId   String
  thread     Thread   @relation(fields: [threadId], references: [id])
  comments  Comment[]
  
  // Indexes
  @@index([mongoId], name: "idx_post_mongo_id")
  @@index([threadId], name: "idx_post_thread_id")
  @@index([threadId, mongoId], name: "idx_post_thread_mongo")
}

model Comment {
  id        String @id @default(uuid())
  mongoId   String @unique
  embedding Unsupported("vector(384)")?
  postId   String
  post     Post   @relation(fields: [postId], references: [id])
  
  // Indexes
  @@index([mongoId], name: "idx_comment_mongo_id")
  @@index([postId], name: "idx_comment_post_id")
  @@index([postId, mongoId], name: "idx_comment_post_mongo")
}